<div class="entity">
  <div class="entity__signature">
    <a class="entity__name" href="<%= anchor_url(node) %>">
      <%= stringify(node) %>
    </a>

    <% if node.parameters.to_a.any? %>
      <span>(</span>

      <% node.parameters.each do |p| %>
        <%= generate(p) %>
      <% end %>

      <span>)</span>
    <% end %>

    <%= source_url(node) %>
  </div>

  <%= comment(node) %>
</div>